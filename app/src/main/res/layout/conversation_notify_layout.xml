<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/conversation_notify_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gunmetal"
    android:padding="10dp">

    <TextView
        android:id="@+id/conversation_notify_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="@string/notify_chat_message_label"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/conversation_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/conversation_notify_label"
        android:background="@drawable/transparent_button_selector"
        android:padding="10dp"
        android:text="@string/cancel"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/conversation_notify_me_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/conversation_notify_label"
        android:background="@drawable/theme_button_selector"
        android:padding="10dp"
        android:text="@string/notify_me"
        android:textColor="@color/white" />
</RelativeLayout>